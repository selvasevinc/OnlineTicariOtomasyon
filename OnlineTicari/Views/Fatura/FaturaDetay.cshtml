@using OnlineTicari.Models.Siniflar
@model List<Fatura_kalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Fatura Kalemleri</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"></li>
</ol>

<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>
    </tr>
    @foreach (var x in Model)
    {
    <tr>
        <td>@x.FaturaKalemId</td>
        <td>@x.Aciklama</td>
        <td>@x.Miktar</td>
        <td>@x.BirimFiyat</td>
        <td>@x.Tutar</td>
    </tr>
    }
</table>
<a href="/Fatura/YeniKalem" class="btn btn-default" style="background-color:darksalmon">Yeni Kalem Girişi</a>