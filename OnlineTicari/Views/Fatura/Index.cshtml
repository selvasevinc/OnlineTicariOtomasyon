@using OnlineTicari.Models.Siniflar
@model List<Fatura>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top: 20px;">
    <tr>
        <th>Seri-Sıra No</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Teslim Eden</th>
        <th>Teslim Alan</th>
        <th>Toplam</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Yeni Kalem</th>

    </tr>

    @foreach (var k in Model)
    {
    <tr>
        <td>@k.FaturaSeriNo @k.FaturaSiraNo</td>
        <td>@k.Tarih</td>
        <td>@k.Saat</td>
        <td>@k.TeslimEden</td>
        <td>@k.TeslimAlan</td>
        <td>@k.Toplam ₺</td>
        <td><a href="/Fatura/FaturaGetir/@k.Faturaid" class="btn btn-warning">Güncelle</a></td>
        <td><a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-success" style="background-color:lightgray; color:black">Detay</a></td>
        <td><a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-success" style="background-color:dodgerblue; color:black">Ekle</a></td>

    </tr>    }

</table>
<a href="/Fatura/FaturaEkle" class="btn btn-info">Yeni Fatura Girişi</a>
 <br /> <br />
<button class="btn btn-warning" style="background-color:#d95151" data-toggle="modal"
        data-target="#Modal1" type="button">Popup Penceresi</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                 <h2 class="modal-title">Popup Diyalog</h2>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach (var x in Model)
                    {
                    <tr>
                        <td>@x.FaturaSeriNo</td>
                        <td>@x.FaturaSiraNo</td>
                        <td>@x.Toplam ₺</td>
                    </tr>
                    } 
                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Tamam</button>
            </div>   
        </div>
    </div>
</div>
